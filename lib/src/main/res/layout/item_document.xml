<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.example.library.ui.LibraryVM" />
        <variable
            name="document"
            type="com.example.core.data.Document" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> vm.onDocumentClicked(document)}">

        <ImageView
            android:id="@+id/documentThumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/documentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/documentThumbnail"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="lorem ipsum" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/documentDateOfCreation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/documentFileSize"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="date of something" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/documentFileSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="69 kb" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>